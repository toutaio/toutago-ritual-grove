[[ define "content" ]]
<div class="posts">
    <h2>Recent Posts</h2>
    [[ range .Posts ]]
    <article class="post-summary">
        <h3><a href="/posts/[[ .ID ]]">[[ .Title ]]</a></h3>
        <div class="post-meta">
            <span class="date">[[ .PublishedAt ]]</span>
            <span class="category">[[ .Category ]]</span>
        </div>
        <p>[[ .Excerpt ]]</p>
        <a href="/posts/[[ .ID ]]" class="read-more">Read more &rarr;</a>
    </article>
    [[ end ]]

    <div class="pagination">
        <!-- Pagination will go here -->
    </div>
</div>
[[ end ]]
