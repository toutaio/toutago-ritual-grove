func TestRateLimitMiddleware_ResetsAfterWindow(t *testing.T) {
	middleware := RateLimitMiddleware(2, 100*time.Millisecond) // 100ms window

	handler := middleware(http.HandlerFunc(func(w http.ResponseWriter, r *http.Request) {
		w.WriteHeader(http.StatusOK)
	}))

	clientIP := "192.168.1.1:1234"

	// Make 2 requests
	for i := 0; i < 2; i++ {
		req := httptest.NewRequest("GET", "/test", nil)
		req.RemoteAddr = clientIP
		rr := httptest.NewRecorder()
		handler.ServeHTTP(rr, req)
	}

	// 3rd request should be blocked
	req := httptest.NewRequest("GET", "/test", nil)
	req.RemoteAddr = clientIP
	rr := httptest.NewRecorder()
	handler.ServeHTTP(rr, req)

	if rr.Code != http.StatusTooManyRequests {
		t.Errorf("Expected status 429, got %d", rr.Code)
	}

	// Wait for window to expire
	time.Sleep(150 * time.Millisecond)

	// Request should succeed now
	req = httptest.NewRequest("GET", "/test", nil)
	req.RemoteAddr = clientIP
	rr = httptest.NewRecorder()
	handler.ServeHTTP(rr, req)

	if rr.Code != http.StatusOK {
		t.Errorf("After reset: expected status 200, got %d", rr.Code)
	}
}

