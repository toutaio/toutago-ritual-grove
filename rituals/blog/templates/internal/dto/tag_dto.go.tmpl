package dto

import "errors"

// CreateTagDTO represents data for creating a new tag
type CreateTagDTO struct {
	Name string `json:"name" form:"name"`
}

// Validate validates the CreateTagDTO
func (dto *CreateTagDTO) Validate() error {
	if dto.Name == "" {
		return errors.New("tag name is required")
	}
	if len(dto.Name) > 50 {
		return errors.New("tag name too long (max 50 characters)")
	}
	return nil
}

