package helpers

import (
	"errors"
	"regexp"
	"strings"
)

const (
	minPasswordLength = 8
)

var (
	uppercaseRegex   = regexp.MustCompile(`[A-Z]`)
	lowercaseRegex   = regexp.MustCompile(`[a-z]`)
	digitRegex       = regexp.MustCompile(`[0-9]`)
	specialCharRegex = regexp.MustCompile(`[!@#$%^&*()_+\-=\[\]{}|;:,.<>?]`)
)

// Common weak passwords (lowercase for comparison)
var commonPasswords = map[string]bool{
	"password":  true,
	"password1": true,
	"password123": true,
	"admin": true,
	"admin123": true,
	"welcome": true,
	"welcome123": true,
	"qwerty": true,
	"qwerty123": true,
	"letmein": true,
	"letmein123": true,
	"123456": true,
	"12345678": true,
	"123456789": true,
	"test": true,
	"test123": true,
	"user": true,
	"user123": true,
}

// ValidatePasswordStrength validates password meets security requirements
func ValidatePasswordStrength(password string) error {
	// Check minimum length
	if len(password) < minPasswordLength {
		return errors.New("password must be at least 8 characters long")
	}

	// Check for uppercase letter
	if !uppercaseRegex.MatchString(password) {
		return errors.New("password must contain at least one uppercase letter")
	}

	// Check for lowercase letter
	if !lowercaseRegex.MatchString(password) {
		return errors.New("password must contain at least one lowercase letter")
	}

	// Check for digit
	if !digitRegex.MatchString(password) {
		return errors.New("password must contain at least one digit")
	}

	// Check for special character
	if !specialCharRegex.MatchString(password) {
		return errors.New("password must contain at least one special character (!@#$%^&*()_+-=[]{}|;:,.<>?)")
	}

	// Check against common passwords
	lowerPassword := strings.ToLower(password)
	if commonPasswords[lowerPassword] {
		return errors.New("password is too common, please choose a more unique password")
	}

	return nil
}

// GetPasswordStrengthScore returns a score from 0-5 indicating password strength
func GetPasswordStrengthScore(password string) int {
	score := 0

	// Length score
	if len(password) >= 8 {
		score++
	}
	if len(password) >= 12 {
		score++
	}

	// Character type scores
	if uppercaseRegex.MatchString(password) {
		score++
	}
	if lowercaseRegex.MatchString(password) {
		score++
	}
	if digitRegex.MatchString(password) {
		score++
	}
	if specialCharRegex.MatchString(password) {
		score++
	}

	// Penalty for common passwords
	if commonPasswords[strings.ToLower(password)] {
		score = max(0, score-2)
	}

	return min(score, 5)
}

func max(a, b int) int {
	if a > b {
		return a
	}
	return b
}

func min(a, b int) int {
	if a < b {
		return a
	}
	return b
}
