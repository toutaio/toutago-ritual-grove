<template>
  <div class="category-detail">
    <h1>{{ category.name }}</h1>
    <p v-if="category.description" class="description">{{ category.description }}</p>
    
    <div class="posts-section">
      <h2>Posts in this category</h2>
      <div v-if="category.posts && category.posts.length > 0" class="posts-list">
        <article v-for="post in category.posts" :key="post.id" class="post-preview">
          <h3><a :href="`/posts/${post.id}`">{{ post.title }}</a></h3>
          <p class="excerpt">{{ post.excerpt }}</p>
          <div class="post-meta">
            <span class="author">By {{ post.author }}</span>
            <span class="date">{{ formatDate(post.created_at) }}</span>
          </div>
        </article>
      </div>
      <div v-else class="empty-state">
        <p>No posts in this category yet.</p>
      </div>
    </div>
    
    <a href="/categories" class="back-link">‚Üê Back to all categories</a>
  </div>
</template>

<script setup>
defineProps({
  category: {
    type: Object,
    required: true
  }
})

const formatDate = (dateString) => {
  if (!dateString) return ''
  const date = new Date(dateString)
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })
}
</script>

