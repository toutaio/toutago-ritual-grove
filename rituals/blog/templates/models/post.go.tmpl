package models

import (
	"time"
)

// Post represents a blog post
type Post struct {
	ID          int64     `json:"id" db:"id"`
	Title       string    `json:"title" db:"title" validate:"required,min=1,max=200"`
	Slug        string    `json:"slug" db:"slug" validate:"required,min=1,max=200"`
	Content     string    `json:"content" db:"content" validate:"required"`
	Excerpt     string    `json:"excerpt" db:"excerpt"`
	CategoryID  int64     `json:"category_id" db:"category_id"`
	AuthorID    int64     `json:"author_id" db:"author_id"`
	Status      string    `json:"status" db:"status" validate:"required,oneof=draft published archived"`
	PublishedAt *time.Time `json:"published_at,omitempty" db:"published_at"`
	CreatedAt   time.Time `json:"created_at" db:"created_at"`
	UpdatedAt   time.Time `json:"updated_at" db:"updated_at"`
}

// PostStatus constants
const (
	PostStatusDraft     = "draft"
	PostStatusPublished = "published"
	PostStatusArchived  = "archived"
)
